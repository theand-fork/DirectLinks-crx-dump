{
  "name": "DirectLinks",
  "version": "1.2",
  "description": "Circumvents certain techniques used by Google and Facebook to track link clicks.",
  "manifest_version": 2,
  "icons": {
    "128": "icon128.png",
    "16": "icon16.png",
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "js": [
        "injected.js"
      ],
      "matches": [
        "*://www.facebook.com/*",
        "*://www.google.co.kr/*",
        "*://www.google.com/*"
      ]
    }
  ]
}
